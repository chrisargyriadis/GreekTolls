<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="chrisargyriadis.greektolls.RouteActivity"
    android:background="@mipmap/asphalt">

    <TextView   android:id="@+id/starting_point_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/starting_point"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textColor="#FFFFCC"/>

    <TextView       android:id="@+id/starting_city"
        android:text="@string/select_starting_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/starting_point_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFCC" />

    <Spinner    android:id="@+id/starting_city_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/starting_city"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/starting_city"
        android:textColor="#FFFFCC" />

    <TextView   android:id="@+id/destination_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/destination"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:textColor="#FFFFCC"/>

    <TextView       android:id="@+id/destination"
        android:text="@string/select_starting_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destination_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFCC" />

    <Spinner    android:id="@+id/destination_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destination"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/destination"
        android:textColor="#FFFFCC" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_button"
        android:id="@+id/route_button"
        android:layout_below="@+id/destination_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>
